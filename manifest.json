{
  "name": "Bridge Translate",
  "description": "üåÅ Chrome extension for instant AI-powered translation on input.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "Bridge Translate"
  },
  "permissions": ["storage", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "pages/*", "src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
